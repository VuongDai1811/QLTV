@model QuanLyThuVien.Models.Roles

@{
    ViewData["Title"] = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="tab-pane fade profile-overview active show" id="profile-overview" role="tabpanel">
    <h5 class="card-title">Xác nhận xóa quyền truy cập?</h5>

    <div class="row">
        <div class="col-lg-3 col-md-4 label ">ID:</div>
        <div class="col-lg-9 col-md-8">@Model.RoleId</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Tên quyền truy cập:</div>
        <div class="col-lg-9 col-md-8">@Model.RoleName</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Mô tả:</div>
        <div class="col-lg-9 col-md-8">@Model.Description</div>
    </div>
    <div class="row">
        <form asp-action="Delete" asp-route-id="@Model.RoleId">
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> 
<!--            <a asp-action="Index">Quay lại</a> -->
            <button class="btn btn-secondary" asp-action="Index">Quay lại</button>
        </form>
    </div>
</div>
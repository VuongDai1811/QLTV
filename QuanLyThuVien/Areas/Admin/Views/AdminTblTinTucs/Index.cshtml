@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<QuanLyThuVien.Models.TblTinTucs>
@{
    ViewData["Title"] = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Danh sách tin tức: page @ViewBag.CurrentPage</h3>

<p>
    <a asp-action="Create">Tạo tin mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Scontents
            </th>
            <th>
                Contents
            </th>
            <th>
                Thumb
            </th>
            <th>
                Published
            </th>
            <th>
                Alias
            </th>
            <th>
                CreatedDate
            </th>
            <th>
                Author
            </th>
            <th>
                AccountId
            </th>
            <th>
                Tags
            </th>
            <th>
                CatId
            </th>
            <th>
                IsHot
            </th>
            <th>
                IsNewfeed
            </th>
            <th>
                MetaKey
            </th>
            <th>
                MetaDesc
            </th>
            <th>
                Views
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Scontents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thumb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNewfeed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Views)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div aria-label="Page navigation example">
    <ul class="pagination">
        <pager class="pagination-lg" list="@Model" asp-area="Admin" asp-controller="AdminTblTinTucs" asp-action="Index" />
    </ul>
</div>
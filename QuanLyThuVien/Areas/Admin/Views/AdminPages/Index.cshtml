@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<QuanLyThuVien.Models.Pages>
@{
    ViewData["Title"] = "Danh sách Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Danh sách Page: page @ViewBag.CurrentPage</h3>

<p>
    <a asp-action="Create">Tạo page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                PageName
            </th>
            <th>
                Contents
            </th>
            <th>
                Thumb
            </th>
            <th>
                Published
            </th>
            <th>
                Title
            </th>
            <th>
                MetaDesc
            </th>
            <th>
                MetaKey
            </th>
            <th>
                Alias
            </th>
            <th>
                CreatedDate
            </th>
            <th>
                Ordering
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thumb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordering)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PageId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PageId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div aria-label="Page navigation example">
    <ul class="pagination">
        <pager class="pagination-lg" list="@Model" asp-area="Admin" asp-controller="AdminPages" asp-action="Index" />
    </ul>
</div>